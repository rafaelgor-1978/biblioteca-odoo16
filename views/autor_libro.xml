<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- =========================
            VISTA TREE
    ========================== -->
    <record id="view_biblioteca_autor_libro_tree" model="ir.ui.view">
        <field name="name">biblioteca.autor_libro.tree</field>
        <field name="model">biblioteca.autor_libro</field>
        <field name="arch" type="xml">
            <tree string="Autores por Libro" editable="bottom">
                <field name="orden" widget="handle"/> <field name="libro_id" optional="hide"/>
                <field name="autor_id"/>
                <field name="es_autor_principal"/>
            </tree>
        </field>
    </record>
<!-- =========================
            VISTA FORM
    ========================== -->
    <record id="view_biblioteca_autor_libro_form" model="ir.ui.view">
        <field name="name">biblioteca.autor_libro.form</field>
        <field name="model">biblioteca.autor_libro</field>
        <field name="arch" type="xml">
            <form string="Detalle de Autor">
                <sheet>
                    <group>
                        <group>
                            <field name="libro_id"/>
                            <field name="autor_id"/>
                        </group>
                        <group>
                            <field name="orden"/>
                            <field name="es_autor_principal"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
<!-- =========================
            VISTA ACTION
    ========================== -->
    <record id="action_biblioteca_autor_libro" model="ir.actions.act_window">
        <field name="name">Relaciones Autor-Libro</field>
        <field name="res_model">biblioteca.autor_libro</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>