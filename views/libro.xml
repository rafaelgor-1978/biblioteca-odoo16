<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- =========================
         BUSQUEDA
    ========================== -->
    <record id="view_biblioteca_libro_search" model="ir.ui.view">
        <field name="name">biblioteca.libro.search</field>
        <field name="model">biblioteca.libro</field>   
        <field name="type">search</field> <!-- Asegúrate de que el tipo sea correcto -->     
        <field name="arch" type="xml">

                <search string="Buscar Libros">
                    <field name="name" string="Título"/>
                    <field name="isbn"/>
                    <filter string="Libros disponibles" 
                            name="libros_disponibles_filter" 
                            domain="[('estado', '=', 'disponible')]"/>
                    
                    <separator/>
                    <filter string="Libros prestados" 
                            name="libros_prestados_filter" 
                            domain="[('estado', '=', 'prestado')]"/>
                    
                    <separator/>
                    <filter string="Libros en reparacion" 
                            name="libros_reparacion_filter" 
                            domain="[('estado', '=', 'reparacion')]"/>
                    
                    <separator/>
                    <filter string="Libros perdidos" 
                            name="libros_perdidos_filter" 
                            domain="[('estado', '=', 'perdido')]"/>
                    
                    <separator/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Estado" 
                                name="group_by_estado" 
                                domain="[]" 
                                context="{'group_by': 'estado'}"/>
                    </group>
                </search>
            
                
                
                
            
        </field>
    </record>
    <!-- =========================
            VISTA TREE
    ========================== -->
    <record id="view_biblioteca_libro_tree" model="ir.ui.view">
        <field name="name">biblioteca.libro.tree</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <tree string="Libros">
            
                <field name="imagen" widget="image" options="{'size': [35, 35]}" string="Portada"/>
                <field name="name"/>
                <field name="isbn"/>
                <field name="estado"
                    widget="badge"
                    decoration-success="estado == 'disponible'" 
                    decoration-info="estado == 'prestado'" 
                    decoration-warning="estado == 'reparacion'" 
                    decoration-danger="estado == 'perdido'"
                    />
                <field name="ano_publicacion"/> 
               
            </tree>
        </field>
    </record>
    <!-- =========================
            VISTA KANBAN
    ========================== -->
    <record id="view_biblioteca_libro_kanban" model="ir.ui.view">
        <field name="name">biblioteca.libro.kanban</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="imagen"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            
                            <div class="o_kanban_image_fill_left d-none d-md-block" 
                                t-attf-style="background-image:url('#{kanban_image('biblioteca.libro', 'imagen', record.id.raw_value)}')">
                            </div>

                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="editorial"/>
                                </div>
                                <ul>
                                    <li><strong>ISBN:</strong> <field name="isbn"/></li>
                                    <li><strong>Año:</strong> <field name="ano_publicacion"/></li>
                                    <li>
                                        <span t-attf-class="badge rounded-pill 
                                            #{record.estado.raw_value == 'disponible' ? 'text-bg-success' : 
                                            record.estado.raw_value == 'prestado' ? 'text-bg-info' : 
                                            record.estado.raw_value == 'reparacion' ? 'text-bg-warning' : 
                                            record.estado.raw_value == 'perdido' ? 'text-bg-danger' : 'text-bg-secondary'}">
                                            <field name="estado"/>
                                        </span>
                                        
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- =========================
            VISTA FORM
    ========================== -->
    <record id="view_biblioteca_libro_form" model="ir.ui.view">
        <field name="name">biblioteca.libro.form</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <form string="Libro">
                <sheet>
                    
                    <notebook>
                        <page string="Información General">
                            <field name="imagen" widget="image" class="oe_avatar" options='{"preview_image": "imagen"}'/>
                            <group>
                                <group>
                                    <field name="name"/>
                                    <field name="isbn"/>                            
                                    <field name="ano_publicacion"/>
                                </group>
                                <group>
                                    <field name="estado"/>
                                    <field name="active"/>                            
                                    <field name="genero_ids" widget="many2many_tags"/>                                
                                </group>
                            </group>
                        </page>

                        <page string="Autores">
                            <field name="autores_ids">
                                <tree>
                                    <field name="orden" widget="handle"/>
                                    <field name="autor_id"/>
                                    <field name="es_autor_principal"/>
                                </tree>
                            </field>                            
                        </page>        
                    
                        <page string="Otros">
                            <group>
                                <field name="editorial"/>
                                <field name="fecha_adquisicion"/>
                                <field name="precio"/>                            
                                
                                
                            </group>
                            <group>
                                <field name="descripcion"/>
                            </group>
                            <div string="Historico de prestamos">
                                <field name="prestamo_ids"/>
                            </div>
                        </page>
                    

                                                           

                    </notebook>

                </sheet>
            </form>
        </field>
    </record>


    <!-- =========================
            ACCIÓN
    ========================== -->
    <record id="action_biblioteca_libro" model="ir.actions.act_window">
        <field name="name">Libros</field>
        <field name="res_model">biblioteca.libro</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>


    <!-- =========================
            MENÚ
    ========================== -->
    <menuitem id="menu_biblioteca_root"
              name="Biblioteca"
              web_icon="biblioteca,static/description/icon.png"
              sequence="10"/>

    <menuitem id="menu_biblioteca_libros"
              name="Libros"
              parent="menu_biblioteca_root"
              action="action_biblioteca_libro"
              sequence="10"/>

</odoo>
