<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- =========================
         BUSQUEDA
    ========================== -->
    <record id="view_biblioteca_libro_search" model="ir.ui.view">
        <field name="name">biblioteca.libro.search</field>
        <field name="model">biblioteca.libro</field>   
        <field name="type">search</field> <!-- Asegúrate de que el tipo sea correcto -->     
        <field name="arch" type="xml">

                <search string="Buscar Libros">
                    <field name="name" string="Título"/>
                    <field name="isbn"/>
                    <filter string="Libros disponibles" 
                            name="libros_disponibles_filter" 
                            domain="[('estado', '=', 'disponible')]"/>
                    
                    <separator/>
                    <filter string="Libros prestados" 
                            name="libros_prestados_filter" 
                            domain="[('estado', '=', 'prestado')]"/>
                    
                    <separator/>
                    <filter string="Libros en reparacion" 
                            name="libros_reparacion_filter" 
                            domain="[('estado', '=', 'reparacion')]"/>
                    
                    <separator/>
                    <filter string="Libros perdidos" 
                            name="libros_perdidos_filter" 
                            domain="[('estado', '=', 'perdido')]"/>
                    
                    <separator/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Estado" 
                                name="group_by_estado" 
                                domain="[]" 
                                context="{'group_by': 'estado'}"/>
                    </group>
                </search>
            
                
                
                
            
        </field>
    </record>
    <!-- =========================
            VISTA TREE
    ========================== -->
    <record id="view_biblioteca_libro_tree" model="ir.ui.view">
        <field name="name">biblioteca.libro.tree</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <tree string="Libros">
            
                <field name="imagen" widget="image" options="{'size': [35, 35]}" string="Portada"/>
                <field name="name"/>
                <field name="isbn"/>
                <field name="estado"
                    widget="badge"
                    decoration-success="estado == 'disponible'" 
                    decoration-info="estado == 'prestado'" 
                    decoration-warning="estado == 'reparacion'" 
                    decoration-danger="estado == 'perdido'"
                    />
                <field name="ano_publicacion"/> 
               
            </tree>
        </field>
    </record>
    <!-- =========================
            VISTA KANBAN
    ========================== -->
    <record id="view_biblioteca_libro_kanban" model="ir.ui.view">
        <field name="name">biblioteca.libro.kanban</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <kanban sample="1" class="o_kanban_dashboard">
                <field name="id"/>
                <field name="imagen"/>
                <field name="estado"/>
                <field name="genero_ids"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <style>
                            .libro-card {
                                transition: all 0.3s ease-in-out;
                                cursor: pointer;
                            }
                            .libro-card:hover {
                                transform: translateY(-5px); /* Sube un poco */
                                shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
                            }
                            .libro-img-container {
                                transition: transform 0.5s ease;
                                overflow: hidden;
                            }
                            .libro-card:hover .libro-img-container {
                                transform: scale(1.05); /* Zoom suave a la imagen */
                            }
                        </style>

                        <div t-attf-class="oe_kanban_global_click p-0 pb-2 shadow-sm border-0 rounded-3 overflow-hidden libro-card" 
                            style="width: 250px; background-color: #ffffff; margin-bottom: 15px;">
                            
                            <div class="libro-img-container" 
                                t-attf-style="background-image:url('#{kanban_image('biblioteca.libro', 'imagen', record.id.raw_value)}'); 
                                            height: 280px; 
                                            background-size: contain; 
                                            background-repeat: no-repeat; 
                                            background-position: center; 
                                            background-color: #f8f9fa; 
                                            position: relative;">
                                
                                <div style="position: absolute; top: 10px; right: 10px; z-index: 2;">
                                    <span t-attf-class="badge rounded-pill shadow-sm border-0
                                        #{record.estado.raw_value == 'disponible' ? 'text-bg-success' : 
                                        record.estado.raw_value == 'prestado' ? 'text-bg-danger' : 
                                        record.estado.raw_value == 'reparacion' ? 'text-bg-warning' : 'text-bg-secondary'}"
                                        style="padding: 6px 12px;">
                                        <field name="estado"/>
                                    </span>
                                </div>
                            </div>

                            <div class="px-3 py-2">
                                <div class="mb-1">
                                    <strong class="o_kanban_record_title" style="font-size: 1.1rem; color: #212529;">
                                        <field name="name"/>
                                    </strong>
                                </div>

                                <div class="text-muted mb-2" style="font-size: 0.85rem;">
                                    <i class="fa fa-university me-1"/> <field name="editorial"/>
                                </div>

                                <div class="mb-3">
                                    <field name="genero_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>

                                <div class="d-flex justify-content-between align-items-center pt-2 border-top" style="font-size: 0.8rem;">
                                    <div class="text-muted small">
                                        <i class="fa fa-barcode me-1"/> <field name="isbn"/>
                                    </div>
                                    <div class="badge text-bg-light border text-muted">
                                        <field name="ano_publicacion"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- =========================
            VISTA FORM
    ========================== -->
    <record id="view_biblioteca_libro_form" model="ir.ui.view">
        <field name="name">biblioteca.libro.form</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <form string="Libro">
            <header>                
                <field name="estado" widget="statusbar" options="{'clickable': '1'}" statusbar_visible="disponible,prestado,reparacion,perdido"/>
            </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">              
                                        
                           
                            <button name="action_filtrar_prestamos"                                 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-check"
                                context="{'estado': 'activo'}">
                                <field name="prestamos_activos_count" widget="statinfo" string="Prestamos Activos"/>
                                
                            </button>
                            <button name="action_filtrar_prestamos"                                 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-arrow-left"
                                context="{'estado': 'devuelto'}">
                                <field name="prestamos_devueltos_count" widget="statinfo" string="Prestamos Devueltos"/>
                                
                            </button>
                             <button name="action_filtrar_prestamos"
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-book">
                                    <field name="prestamos_totales_count" widget="statinfo" string="Prestamos Totales"/>
                            </button>
                    </div>
                    
                    <field name="imagen" widget="image" class="oe_avatar" options='{"preview_image": "imagen"}'/>
                            <group>
                                <group>
                                    <field name="name"/>
                                    <field name="isbn"/>                            
                                    <field name="ano_publicacion"/>
                                    <field name="fecha_adquisicion"/>
                                               
                                </group>
                                <group>
                                    <field name="precio"/> 
                                    <field name="editorial"/>
                                    <field name="active"/>                            
                                    <field name="genero_ids" 
                                        widget="many2many_tags"
                                        options="{'color_field': 'color', 'no_quick_create': True}"
                                    
                                    />                                
                                </group>
                                
                                <separator string="Breve sinopsis:"/>
                                <field name="descripcion" placeholder="Escribe aquí..."/>
                                
                            </group>
                
                    
                    <notebook>                    
                        
                        <page string="Autores">
                            <field name="autores_ids">
                                <tree>
                                    <field name="orden" widget="handle"/>
                                    <field name="autor_id" string='Autores'/>
                                    <field name="es_autor_principal"/>
                                </tree>
                            </field>                            
                        </page>        
                    
                        <page string="Prestamos">
                            
                           
                            <div string="Historico de prestamos">
                                <field name="prestamo_ids"/>
                            </div>
                        </page>
                    

                                                           

                    </notebook>

                </sheet>
            </form>
        </field>
    </record>


    <!-- =========================
            ACCIÓN
    ========================== -->
    <record id="action_biblioteca_libro" model="ir.actions.act_window">
        <field name="name">Libros</field>
        <field name="res_model">biblioteca.libro</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>


    <!-- =========================
            MENÚ
    ========================== -->
    <menuitem id="menu_biblioteca_root"
              name="Biblioteca"
              web_icon="biblioteca,static/description/icon.png"
              sequence="10"/>

    <menuitem id="menu_biblioteca_libros"
              name="Libros"
              parent="menu_biblioteca_root"
              action="action_biblioteca_libro"
              sequence="10"/>

</odoo>
